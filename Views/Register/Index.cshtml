@{
    ViewData["Title"] = "Register page";
}

<div class="text-center mt-5">

    <form id="form" style="max-width: 300px;margin: auto;">

        <img src="Images/Loggin.png">

        <h3 class="my-4">Please sign up</h3>

        <input type="email"
               id="emailAdress"
               class="form-control mb-1"
               placeholder="Email Adress"
               required autofocus>

        <input type="password"
               id="password"
               class="form-control mb-1"
               placeholder="Password"
               required>

        <input type="password"
               id="confimPassword"
               class="form-control mb-1"
               placeholder="Confirm password"
               required>

        <input type="text"
               id="nationality"
               class="form-control mb-1"
               placeholder="Nationality"
               required autofocus>

        <input type="date"
               id="dateOfBirth"
               class="form-control mb-1"
               placeholder="Date of birth"
               required autofocus>

        <div class="mt-2 d-grid">
            <button type="submit" class=" btn-block btn-lg btn-success">
                Sign In
            </button>
        </div>
    </form>
</div>